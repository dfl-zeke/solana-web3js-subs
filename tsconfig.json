{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2020",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
